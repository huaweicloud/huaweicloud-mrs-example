    <groupId>com.huawei.mrs</groupId>
    <artifactId>solr-example</artifactId>
    <version>8.1.3-313.r10</version>

    <properties>
        <hadoop.version>3.1.1-h0.cbu.mrs.313.r10</hadoop.version>
        <solr.version>8.4.0-h0.cbu.mrs.313.r10</solr.version>
        <zookeeper.version>3.6.3-h0.cbu.mrs.313.r10</zookeeper.version>
        <http.version>4.5.13</http.version>
